{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build C++ Project",
      "type": "cppbuild",
      "command": "clang++",
      "args": [
        "${workspaceFolder}/main.cpp",
        "${workspaceFolder}/src/*.cpp",
        "-I",
        "${workspaceFolder}/include",
        "-o",
        "${workspaceFolder}/build/main.exe",
        "-mconsole"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "detail": "Compiler: clang++"
    }
  ]
}
